<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="440dp"
    android:layout_gravity="center"
    android:background="@drawable/background1"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="61dp"
            android:layout_height="38dp"
            android:layout_gravity="center"
            android:src="@drawable/csk"
            tools:layout_editor_absoluteX="105dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:layout_width="140dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:text="    NEW VISITOR"
            android:textColor="#160202"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="64dp" />

        <TextView
            android:id="@+id/TvpopupPur"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@drawable/roundbutton1"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="96dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/TvpopupPur1"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:background="@drawable/roundbutton1"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="133dp"
            tools:layout_editor_absoluteY="141dp"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/TvpopupPur2"
            android:layout_width="200dp"
            android:layout_height="101dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/roundbutton1"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="200dp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/TvpopupPur3"
            android:layout_width="200dp"
            android:layout_height="47dp"

            android:layout_marginLeft="30dp"
            android:background="@drawable/roundbutton1"
            android:padding="10dp"
            android:scrollbars="vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="248dp" />

        <Spinner
            android:id="@+id/spn"
            android:layout_width="200dp"
            android:layout_height="43dp"
           android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:spinnerMode="dialog"
            android:background="@drawable/roundbutton1"/>









        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="260dp"
        android:layout_height="60dp">

        <Button
            android:id="@+id/btD1"
            android:layout_width="82dp"
            android:layout_height="38dp"
            android:background="@drawable/roundbutton"
            android:text="Accept"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.91"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.272" />

        <Button
            android:id="@+id/btD2"
            android:layout_width="83dp"
            android:layout_height="36dp"
            android:background="@drawable/roundbutton2"
            android:text="Reject"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.265"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.291" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</LinearLayout>