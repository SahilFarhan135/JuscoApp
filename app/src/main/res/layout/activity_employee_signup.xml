<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    tools:context=".EmployeeSignup">

    <EditText
        android:id="@+id/etVisitoR"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/roundbutton1"
        android:ems="10"
        android:hint="    Employee ID"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/etName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVLOGO"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/etVEmail"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:background="@drawable/roundbutton1"
        android:ems="10"
        android:hint="     Email"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/etVPassword"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:background="@drawable/roundbutton1"
        android:ems="10"
        android:hint="   Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVEmail"
        android:elevation="10dp"/>

    <EditText
        android:id="@+id/etVCnfPassword"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:background="@drawable/roundbutton1"
        android:ems="10"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColor="#CC6B8E"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVPassword"
        android:elevation="10dp"/>

    <Button
        android:id="@+id/btVSIGNUP"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:background="@drawable/roundbutton"
        android:text="SIGNUP"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVCnfPassword"
        app:layout_constraintVertical_bias="0.581"
        android:elevation="10dp"/>

    <TextView
        android:id="@+id/etVLOGO"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="20dp"
        android:text="EMPLOYEE    REGISTRATION"

        android:textColor="@android:color/black"
        android:textSize="19dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024"
        app:srcCompat="@drawable/csk" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994"
        app:srcCompat="@drawable/kkrsharp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="275dp"
        android:layout_height="49dp"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="73dp"
        android:layout_marginRight="73dp"
        android:background="@drawable/roundbutton1"
        android:ems="10"
        android:hint="  Name"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etVisitoR"
        android:elevation="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>